@model IEnumerable<ThakyCompany.Models.Page>

@{
    ViewBag.Title = "Quản lý tin trang";
    Layout = "/Views/Shared/_ManageLayout.cshtml";
}

<h4>QUẢN LÝ TRANG</h4>

<table class="table">
    <tr>

        <th>
            Tên trang
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.ViTitle, "Edit", "PagesManage", new { id = item.ID }, null)
            </td>
        </tr>
    }
</table>