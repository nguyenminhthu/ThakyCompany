@using ThakyCompany.Language

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/ckeditor/ckeditor.js"></script>
</head>
<body>
    <div class="container">
        <header class="row">
            <div class="col-md-12">
                <div class="headerbackground">
                    <div class="row">
                        <div class="col-md-3" style="padding-left:30px;">
                            <a href="/"><img class="img-responsive" alt="Thakycompany.com" src="/Content/Images/logo.png" /></a>
                        </div>
                        <div class="col-md-6 col-md-of">
                            <div class="hidden-sm hidden-xs" style="padding-top: 45px; "><img src="/Content/Images/banner_Text.png" /> </div>
                        </div>
                        <div class="col-md-3 text-right">
                            <div class="row">
                                <div class="col-md-12 text-right">
                                    <ul class="language">
                                        <li>
                                            @using (Html.BeginForm("ChangeLanguage", "ChangeLanguage", new { culture = "vi", returnUrl = Request.Url.AbsolutePath }, FormMethod.Post, null))
                                            {
                                                <button class="btn btn-link" type="submit"><img width="30" title="Việt Nam" src="/Content/Images/Vietnam-flag.png" alt=""></button>
                                            }
                                        </li>
                                        <li>
                                            @using (Html.BeginForm("ChangeLanguage", "ChangeLanguage", new { culture = "en", returnUrl = Request.Url.AbsolutePath }, FormMethod.Post, null))
                                            {
                                                <button class="btn btn-link" type="submit"><img width="30" title="Việt Nam" src="/Content/Images/United-states-flag.png" alt=""></button>
                                            }
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            @*<div class="row">
                                    <div class="col-md-12" style="background-color:red;">@Resource.String1</div>
                                </div>*@
                        </div>
                    </div>
                    @*<div class="row">
                            <div class="col-md-12">
                                <div style="padding-left: 260px;">
                                    <img src="/Content/Images/TextMoringa.png" />
                                </div>
                            </div>
                        </div>*@
                </div>
            </div>
        </header>
        <div class="boxbackground">
            <div class="navbar navbar-custom">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @*@Html.ActionLink("Application name", "Index", "Home", null, new { @class = "navbar-brand" })*@
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="/">@Resource.Home</a></li>
                        @*<li>@Html.ActionLink(Resource.Home, "Index", "Home")</li>*@
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                        <li>@Html.ActionLink(Resource.Product, "Index", "Product")</li>
                        <li>@Html.ActionLink(Resource.Agency, "Index", "Home", new { id = 2 }, null)</li>
                        <li>@Html.ActionLink(Resource.Contact, "Contact", "Home")</li>
                    </ul>
                    @*@Html.Partial("_LoginPartial")*@
                </div>
            </div>
        </div>
        <div class="boxbackground">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    @*<li data-target="#myCarousel" data-slide-to="3"></li>*@
                </ol>

                <!-- Wrapper for slides -->

                <div class="carousel-inner roundcorner" role="listbox">
                    <div class="item active">
                        <img src="/Content/Images/Carousel/slice1.jpg" alt="thakycompany.com" width="960" height="260">
                    </div>

                    <div class="item">
                        <img src="/Content/Images/Carousel/slice2.jpg" alt="thakycompany.com" width="960" height="260">
                    </div>

                    <div class="item">
                        <img src="/Content/Images/Carousel/slice3.jpg" alt="thakycompany.com" width="960" height="260">
                    </div>
                </div>
                <!-- Left and right controls -->
                <a class="left carousel-control roundcorner" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control roundcorner" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="boxbackground">
            @RenderBody()
            <div class="row">
                <div class="col-md-12">
                    <footer class="roundborder padding-left-0 text-center">
                        <h3><strong>@Resource.CompanyName</strong></h3>
                        <i class="fa fa-home fa-2x"></i> @Resource.AddressValue<br />
                        <i class="fa fa-phone fa-2x"></i> @Resource.Phone<br />
                        <i class="fa fa-envelope-o fa-2x"></i> Email:<a href="mailto:@Resource.Email"> @Resource.Email</a>
                        <br />
                        <i class="fa fa-home fa-2x"></i> Website: <a href="http://thakycompany.com" target="_blank">http://thakycompany.com</a>, <a href="http://moringavina.com/" target="_blank">http://moringavina.com/</a>
                    </footer>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>